<!DOCTYPE html>
<html>
<head>
  <title>median</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
</head>
<body>

<header>
	<h1><%= link_to "median", root_path %></h1>
		<nav>
			<% if current_user %>
			<strong>
				<%= image_tag current_user.avatar(:thumbnail) %>
				<%= current_user.username %>
			</strong>
				<%= link_to "log out", session_path, method: :delete %>
				<%= link_to "account", edit_account_path %>
				<%= link_to "new post", new_post_path %>
			<% else %>
				<%= link_to "sign up", new_user_path %>
				<%= link_to "log in", new_session_path %>
				<% end -%>
		</nav>
		<%= simple_form_for :search, url: search_path do |f| %>
			<%= f.input :query, label: "search" %>

			<%= f.button :submit %>
			<% end %>
</header>

<% if flash[:alert].present? %>
	<div class="alert"><%= flash[:alert]%></div>
<% end %>

<% if flash[:error].present? %>
	<div class="error"><%= flash[:error]%></div>
<% end %>

<%= yield %>

<footer>
	<p>&copy; median. 2013. artismarti.
</footer>

</body>
</html>
